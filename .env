# Email configuration
SMTP_SERVER=smtp.163.com
SMTP_PORT=25
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
EMAIL_FROM=your_email@163.com
EMAIL_TO=recipient_email@example.com

# Stock API Provider Configuration
# Supported providers: "tushare" or "tonghuashun"
STOCK_PROVIDER_TYPE=tushare

# TuShare API Configuration (https://tushare.pro)
# Required if STOCK_PROVIDER_TYPE=tushare
TUSHARE_API_KEY=your_tushare_token
STOCK_API_ENDPOINT=https://api.tushare.pro

# Tonghuashun API Configuration (https://open.tonghuashun.com)
# Required if STOCK_PROVIDER_TYPE=tonghuashun
STOCK_PROVIDER_TYPE=tonghuashun
STOCK_API_KEY=your_tonghuashun_api_key
STOCK_API_SECRET=your_tonghuashun_api_secret
STOCK_API_ENDPOINT=https://api.10jqka.com.cn

# Stock API Request Configuration
STOCK_API_TIMEOUT_SECONDS=30    # Timeout for API requests in seconds
STOCK_API_RATE_LIMIT=100        # Maximum number of API requests per minute
STOCK_API_RETRY_COUNT=3         # Number of retries for failed API requests
STOCK_API_RETRY_DELAY_SECONDS=1 # Delay between retries in seconds

# Stock Data Cache Configuration
STOCK_CACHE_SIZE=10000          # Maximum number of items in cache
STOCK_CACHE_TTL_MINUTES=1440    # Time to live for cached items in minutes (24 hours)
STOCK_CACHE_EVICTION_POLICY=lru # Cache eviction policy (lru, fifo, or ttl)
STOCK_CACHE_CLEANUP_MINUTES=10  # Interval for cleaning expired cache entries

# Stock Data Scheduler Configuration
SCHEDULER_ENABLED=true                 # Enable/disable the stock data scheduler
SCHEDULER_INTERVAL_MINUTES=5           # How often to fetch stock data
SCHEDULER_INITIAL_DELAY_SECONDS=10     # Delay before first run
SCHEDULER_WORKER_POOL_SIZE=5           # Number of concurrent workers
SCHEDULER_STOCKS=600000.SH,000001.SZ   # Comma-separated list of stock codes to monitor

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GIN_MODE=debug  # debug, release, test